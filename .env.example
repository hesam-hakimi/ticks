# Managed Identity
AZURE_MSI_CLIENT_ID=<your-user-assigned-msi-client-id>

# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://<your-search>.search.windows.net
AZURE_SEARCH_INDEX_FIELD=meta_data_field
AZURE_SEARCH_INDEX_TABLE=meta_data_table
AZURE_SEARCH_INDEX_RELATIONSHIP=meta_data_relationship
AZURE_SEARCH_INDEX_COMMON_QUERIES=common_queries

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://<your-aoai>.openai.azure.com/
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4.1

# Database backend
DB_BACKEND=sqlserver   # sqlserver|sqlite

# Azure SQL via MSI (recommended)
AZURE_SQL_SERVER=<your-server>.database.windows.net
AZURE_SQL_DATABASE=<your-db>
# Optional full connection string (overrides server+db build)
# AZURE_SQL_CONN_STR=Driver={ODBC Driver 18 for SQL Server};Server=tcp:<server>.database.windows.net,1433;Database=<db>;Encrypt=yes;TrustServerCertificate=no;Authentication=ActiveDirectoryMsi;

# SQLite (optional/testing)
SQLITE_PATH=data/app.db

# UI defaults
UI_DEFAULT_MAX_ROWS=50
UI_DEFAULT_MAX_COLS=20
UI_DEFAULT_TIMEOUT_SECONDS=20
UI_DEFAULT_DEBUG=false

# Logging
LOG_DIR=logs

# Guardrails
MAX_RETRY_ATTEMPTS=5
DATA_MASKED=true
